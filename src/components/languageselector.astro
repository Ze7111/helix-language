---
import { LanguageSelector } from "astro-i18next/components";
import { Icon } from "astro-icon/components";

const {
	icon = "",
	languageMapping = { en: "English", it: "Italiano" },
	...rest
} = Astro.props;
---

<div
	class="flex items-center pl-2 rounded-md text-sm font-semibold text-center transition focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 border outline-2 border-gray-300 text-gray-700 active:bg-gray-100 dark:active:bg-stone-950 dark:text-gray-100 hover:border-gray-400 dark:hover:bg-dark dark:hover:border-white dark:hover:text-white"
	aria-label="Language selection">
	<Icon name="ion:language" class="w-5 dark:text-white" />
	<label for="language-selector" class="sr-only">Choose a language</label>
	<LanguageSelector
		showFlag={false}
		languageMapping={languageMapping}
		class="appearance-none cursor-pointer rounded-md pl-3 pr-2 py-1.5 font-semibold bg-transparent text-white dark:bg-gray-100 dark:text-black hover:bg-stone-800 dark:hover:bg-white focus-visible:outline-none"
		aria-label="Choose a language"
		{...rest}
	/>
</div>
