---
import { buttonVariants } from "@/components/ui/button";
import { siteConfig } from "@/config/site";
import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import ChessboardBackground from "../components/ChessboardBackground.tsx";
---

<MainLayout title="Astronomy">
	<!--- put the cessbored at z-10 -->
	<div class="absolute inset-100">
		<ChessboardBackground />
	</div>
	<section class="space-y-6 pb-12 pt-16 lg:py-28">
		<div class="container flex max-w-[64rem] flex-col items-center gap-5 text-center">
			<a
				href={siteConfig.links.github}
				class={cn(buttonVariants({ variant: "outline", size: "sm" }))}
				target="_blank"
				rel="noreferrer"
			>
				Follow along on <Icon name="github" class="ml-2 size-4" />
			</a>

			<h1
				class="font-heading text-4xl font-bold sm:text-5xl md:text-6xl lg:text-7xl !leading-[1.1] text-balance"
			>
				Harnessing the potential of Helix.
				<span class="text-gradient_indigo-purple">
					C, C++, Python,<span class="font-sans font-bold"> and</span> Rust.
				</span>
			</h1>

			<p
				class="max-w-[42rem] leading-normal text-muted-foreground sm:text-xl sm:leading-8 text-balance"
			>
				A new high-level language for writing <em>safe*</em> and <em>low-level**</em> code.
			</p>

			<div class="flex justify-center space-x-2 md:space-x-4">
				<a href="/docs/getting-started/" class={cn(buttonVariants({ size: "lg" }))}>
					Get Started
				</a>
				<a
					href="/about"
					class={cn(buttonVariants({ variant: "outline", size: "lg" }), "px-4")}
				>
					<Icon name="lucide:search" class="mr-2 size-5" />
					Explore
				</a>
			</div>
		</div>
	</section>

	<section
		id="features"
		class="container space-y-6 bg-slate-50 py-8 dark:bg-transparent md:py-12 lg:py-24"
	>
		<div class="mx-auto flex max-w-[58rem] flex-col items-center space-y-4 text-center">
			<h2 class="font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
				Explore Helix's Features
			</h2>
			<p
				class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7 balance-text"
			>
				Helix is when simplicity meets power. Experience the ease of Python, the performance
				of C, and the safety of Rustâ€”all in one language.
			</p>
		</div>
		<div
			class="mx-auto grid justify-center gap-4 sm:grid-cols-2 md:max-w-[64rem] md:grid-cols-3"
		>
			<!-- Feature Card 1: Seamless Integration -->
			<div class="relative overflow-hidden rounded-lg border bg-background p-2">
				<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
					<!-- Icon suggestion: Puzzle pieces or connected dots -->
					<Icon name="lucide:link" class="h-6 w-6" />
					<h3 class="font-bold">Seamless Integration</h3>
					<p class="text-sm text-muted-foreground">
						Integrate effortlessly with C, C++, and Rust for high-performance solutions.
					</p>
				</div>
			</div>

			<!-- Feature Card 2: Advanced CLI -->
			<div class="relative overflow-hidden rounded-lg border bg-background p-2">
				<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
					<Icon name="lucide:search" class="h-6 w-6" /><h3 class="font-bold">
						Advanced CLI
					</h3>
					<p class="text-sm text-muted-foreground">
						Empowering developers with a robust CLI.
					</p>
				</div>
			</div>

			<!-- Feature Card 3: Pythonic Simplicity -->
			<div class="relative overflow-hidden rounded-lg border bg-background p-2">
				<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
					<!-- Icon suggestion: Python logo or a simple, elegant design -->
					<Icon name="mdi:language-python" class="h-6 w-6" />
					<h3 class="font-bold">Pythonic Simplicity</h3>
					<p class="text-sm text-muted-foreground">
						Enjoy an intuitive syntax inspired by Python's simplicity and elegance.
					</p>
				</div>
			</div>

			<!-- Feature Card 4: Robust Type System -->
			<div class="relative overflow-hidden rounded-lg border bg-background p-2">
				<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
					<!-- Icon suggestion: A 'check' symbol or a 'shield' -->
					<Icon name="mdi:puzzle-check" class="h-6 w-6" />
					<h3 class="font-bold">Robust Type System</h3>
					<p class="text-sm text-muted-foreground">
						Ensure code reliability with a strong, statically-typed system.
					</p>
				</div>
			</div>

			<!-- Feature Card 5: Cross-Language Support -->
			<div class="relative overflow-hidden rounded-lg border bg-background p-2">
				<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
					<!-- Icon suggestion: Interconnected arrows or globe -->
					<Icon name="mdi:earth" class="h-6 w-6" />
					<h3 class="font-bold">Cross-Language Support</h3>
					<p class="text-sm text-muted-foreground">
						Fluent interoperability with established languages like C, C++, Python and
						Rust.
					</p>
				</div>
			</div>

			<!-- Feature Card 6: Developer-Centric Tools -->
			<div class="relative overflow-hidden rounded-lg border bg-background p-2">
				<div class="flex h-[180px] flex-col justify-between rounded-md p-5">
					<!-- Icon suggestion: Toolkit or gear symbol -->
					<Icon name="mdi:toolbox" class="h-6 w-6" />
					<h3 class="font-bold">Developer-Centric Tools</h3>
					<p class="text-sm text-muted-foreground">
						A suite of tools designed for developer productivity and creativity.
					</p>
				</div>
			</div>
		</div>
	</section>

	<section id="open-source" class="container py-8 md:py-12 lg:py-28">
		<div
			class="mx-auto flex max-w-[58rem] flex-col items-center justify-center gap-4 text-center"
		>
			<h2 class="font-heading text-3xl leading-[1.1] sm:text-3xl md:text-6xl">
				Helix - Open Source Ecosystem
			</h2>
			<p class="max-w-[85%] leading-normal text-muted-foreground sm:text-lg sm:leading-7">
				Helix is proudly open source, encouraging community collaboration and innovation.
				Explore and contribute to Helix on GitHub.
				<br />
				<a
					href={siteConfig.links.github}
					target="_blank"
					rel="noreferrer"
					class="underline underline-offset-4"
				>
					GitHub Repository
				</a>
			</p>
		</div>
	</section>

	<section id="t&c's" class="container py-2 md:py-3 lg:py-4">
    <div class="mx-auto max-w-[48rem]">
      <ul class="list-disc pl-2 text-muted-foreground sm:text-sm sm:leading-7">
        <li>Safe: Helix ensures memory safety by translating to pure Python code.</li>
        <li>Low-level Access: Execute Helix with native C, C++, and Rust code for efficient low-level operations.</li>
      </ul>
    </div>
  </section>
</MainLayout>
